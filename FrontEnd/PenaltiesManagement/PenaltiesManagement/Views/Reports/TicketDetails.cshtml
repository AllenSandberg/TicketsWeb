@model PenaltiesManagement.ViewModel.TicketDetailsViewModel

@{
    ViewData["Title"] = "פרטים של הפניה";
}

@section Scripts
    {
    <script src="@Url.Content("~/js/ticketspage.js")"></script>
}

<div class="row">

    <!-- NEW WIDGET START -->

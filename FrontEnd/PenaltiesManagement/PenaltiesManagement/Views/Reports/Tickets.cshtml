                <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                <h2>רשימה של הפניות</h2>

                <span class="jarviswidget-loader"><i class="fa fa-refresh fa-spin"></i></span>
            </header>

            <!-- widget div-->
            <div role="content">

                <!-- widget edit box -->
                <div class="jarviswidget-editbox">
                    <!-- This area used as dropdown edit box -->

                </div>
                <!-- end widget edit box -->
                <!-- widget content -->
                <div class="widget-body no-padding">



                    <div id="dt_basic_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                        <div class="dt-toolbar">

                            <form asp-controller="Reports" asp-action="Tickets" id="frmFilter">
                                <div class="pull-left">
                                    <div id="dt_basic_filter" class="dataTables_filter" style="margin-right: 10px;">
                                        <label><span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span><input type="text" value="@(Model.TicketsSearch.RegisteredFrom.ToString("yyyy-MM-dd"))" name="RegisteredFrom" id="RegisteredFrom" class="form-control" placeholder="Ticket Opened After" aria-controls="dt_basic" style="width: 130px;"></label>
                                    </div>
                                </div>
                                <div class="pull-left">
                                    <div id="dt_basic_filter" class="dataTables_filter" style="margin-right: 10px;">
                                        <label><span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span><input value="@(Model.TicketsSearch.RegisteredTo.ToString("yyyy-MM-dd"))" name="RegisteredTo" id="RegisteredTo" class="form-control" placeholder="Ticket Opened Before" aria-controls="dt_basic" style="width: 130px;"></label>
                                    </div>
                                </div>
                                <div class="pull-left">
                                    <div id="dt_basic_filter" class="dataTables_filter" style="margin-right: 10px;">
                                        <label><span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span><input value="@(Model.TicketsSearch.Passport)" type="search" name="Passport" class="form-control" placeholder="מספר ת.ז" aria-controls="dt_basic"></label>
                                    </div>
                                </div>



                                <div class="pull-left">
                                    <div id="dt_basic_filter" class="dataTables_filter" style="margin-right: 10px;">
                                        <label><span class="input-group-addon"><i class="glyphicon glyphicon-barcode"></i></span><input value="@(Model.TicketsSearch.VechilePlateNumber)" type="search" name="VechilePlateNumber" class="form-control" placeholder="מספר רכב" aria-controls="dt_basic"></label>
                                    </div>
                                </div>
                                <div class="pull-left">
                                    <div id="dt_basic_filter" class="dataTables_filter" style="margin-right: 10px;">
                                        <label><span class="input-group-addon"><i class="glyphicon glyphicon-barcode"></i></span><input value="@(Model.TicketsSearch.Phone)" type="search" name="Phone" class="form-control" placeholder="מספר טלפון" aria-controls="dt_basic"></label>
                                    </div>
                                </div>
                                <div class="pull-left">
                                    <div id="dt_basic_filter" class="dataTables_filter" style="margin-right: 10px;">
                                        <label><span class="input-group-addon"><i class="glyphicon glyphicon-barcode"></i></span><input value="@(Model.TicketsSearch.Ticketid)" type="search" name="Ticketid" class="form-control" placeholder="מספר דוח" aria-controls="dt_basic"></label>
                                    </div>
                                </div>


                                <div class="pull-left">
                                    <input type="hidden" id="hdBtnType" name="hdBtnType" value="0" />
                                    <button class="btn btn-info" id="btnFilter">Filter</button>
                                    <button class="btn btn-info" id="btnExcel"><i class="fa fa-file-excel-o"></i></button>
                                </div>

                            </form>
                        </div>
                        <table id="dt_basic" class="table table-striped table-bordered table-hover dataTable no-footer" width="100%" role="grid" aria-describedby="dt_basic_info" style="width: 100%;">
                            <thead>
                                <tr role="row">
                                    <th data-hide="expand" class="sorting" tabindex="0" aria-controls="dt_basic" rowspan="1" colspan="1" aria-label=" Transaction Id: activate to sort column ascending" style="width: 160px;"><i class="fa fa-fw fa-barcode text-muted hidden-md hidden-sm hidden-xs"></i>תא. הפניה</th>
                                    <th data-hide="phone" class="sorting" tabindex="0" aria-controls="dt_basic" rowspan="1" colspan="1" aria-label=" Transaction Reference: activate to sort column ascending" style="width: 160px;"><i class="fa fa-fw fa-barcode text-muted hidden-md hidden-sm hidden-xs"></i>תא. ביצוע עבודה</th>
                                    <th data-hide="expand" class="sorting" tabindex="0" aria-controls="dt_basic" rowspan="1" colspan="1" aria-label=" Transaction Reference: activate to sort column ascending" style="width: 160px;"><i class="fa fa-fw fa-barcode text-muted hidden-md hidden-sm hidden-xs"></i>מספר הדוח</th>
                                    <th data-class="expand" class="expand sorting" tabindex="0" aria-controls="dt_basic" rowspan="1" colspan="1" aria-label=" Merchant Name: activate to sort column ascending" style="width: 107px;"><i class="fa fa-fw fa-user text-muted hidden-md hidden-sm hidden-xs"></i>שם הנהג</th>
                                    <th data-class="expand" class="expand sorting" tabindex="0" aria-controls="dt_basic" rowspan="1" colspan="1" aria-label=" Client Id: activate to sort column ascending" style="width: 107px;"><i class="fa fa-fw fa-user text-muted hidden-md hidden-sm hidden-xs"></i> ת.ז\מספר דרקון</th>
                                    <th data-hide="phone" class="sorting" tabindex="0" aria-controls="dt_basic" rowspan="1" colspan="1" aria-label=" Transaction Date: activate to sort column ascending" style="width: 96px;"><i class="fa fa-fw fa-calendar txt-color-blue hidden-md hidden-sm hidden-xs"></i> מספר טלפון</th>
                                    <th data-class="phone" class="expand sorting" tabindex="0" aria-controls="dt_basic" rowspan="1" colspan="1" aria-label=" Amount: activate to sort column ascending" style="width: 107px;"><i class="fa fa-fw fa-money text-muted hidden-md hidden-sm hidden-xs" title="מס. לוחית"></i>מס. לוחית</th>
                                    <th data-class="phone" class="expand sorting" tabindex="0" aria-controls="dt_basic" rowspan="1" colspan="1" aria-label=" Status: activate to sort column ascending" style="width: 107px;"><i class="fa fa-fw fa-check-square-o text-muted hidden-md hidden-sm hidden-xs" title="מודל הרכב"></i> מודל הרכב</th>
                                    <th data-class="expand" class="expand sorting" tabindex="0" aria-controls="dt_basic" rowspan="1" colspan="1" aria-label=" Status: activate to sort column ascending" style="width: 107px;"><i class="fa fa-fw fa-check-square-o text-muted hidden-md hidden-sm hidden-xs" title="סטטוס הטיפול"></i> סטטוס הטיפול</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Tickets != null)
                                {
                                    foreach (var ticket in Model.Tickets)
                                    {
                                        <tr role="row" class="odd">
                                            <td class=" expand">@ticket.SystemTicketId</td>
                                            <td>@(ticket.Created)</td>
                                            <td class=" expand">@(ticket.PenaltyReportNumber)</td>
                                            <td class=" expand"><span class="responsiveExpander"></span>@(ticket.DriverName)</td>
                                            <td class=" expand">@(ticket.Passport)</td>
                                            <td>@(ticket.Phone)</td>
                                            <td>@(ticket.VehiclePlateNumber)</td>
                                            <td>@(ticket.VehileType)</td>
                                            <td class=" expand">@(ticket.Status)</td>
                                            <td>
                                                @{
                                                    var statusClass = "glyphicon glyphicon-ok";
                                                    var statusDescription = "Approved";
                                                    var statusColor = "#1aca0c";
                                                }

                                                <i class="@statusClass" style="color: @statusColor" title="@statusDescription"></i>
                                                &nbsp;&nbsp;&nbsp;
                                                <a href="/Reports/TicketDetails/@(ticket.SystemTicketId)" class=""><span class="glyphicon glyphicon-eye-open"></span></a>
                                            </td>
                                        </tr>

                                    }

                                }

                            </tbody>
                        </table>
                        <div class="dt-toolbar-footer">
                            <div class="col-sm-6 col-xs-12 hidden-xs">
                                <div class="dataTables_info" id="dt_basic_info" role="status" aria-live="polite">Showing up to @(Model.Paging.PageSize) entries</div>
                            </div>
                            <div class="col-xs-12 col-sm-6">
                                <div class="dataTables_paginate paging_simple_numbers" id="dt_basic_paginate">
                                    @if (Model.Paging.EndPage > 1)
                                    {
                                        <ul class="pagination">
                                            @if (Model.Paging.CurrentPage > 1)

                                            {
                                                <li class="paginate_button previous" id="dt_basic_previous"><a href="/Reports/Tickets/?pageNumber=@(Model.Paging.CurrentPage-1)" aria-controls="dt_basic" data-dt-idx="0" tabindex="0">Previous</a></li>
                                            }
                                            else
                                            {
                                                <li class="paginate_button previous disabled" id="dt_basic_previous"><a href="#" aria-controls="dt_basic" data-dt-idx="0" tabindex="0">Previous</a></li>
                                            }

                                            @for (var page = Model.Paging.StartPage; page <= Model.Paging.EndPage; page++)
                                            {
                                                if (Model.Paging.CurrentPage == page)
                                                {
                                                    <li class="paginate_button active"><a href="#" aria-controls="dt_basic" data-dt-idx="2" tabindex="0">@(page.ToString())</a></li>
                                                }
                                                else
                                                {
                                                    <li class="paginate_button "><a href="/Reports/Tickets/?pageNumber=@(page)" aria-controls="dt_basic" data-dt-idx="@(page)" tabindex="0">@(page)</a></li>
                                                }

                                            }
                                            @if (Model.Paging.CurrentPage < Model.Paging.TotalPages)
                                            {
                                                <li class="paginate_button next" id="dt_basic_next"><a href="/Reports/Tickets/?pageNumber=@(Model.Paging.CurrentPage+1)" aria-controls="dt_basic" data-dt-idx="8" tabindex="0">Next</a></li>
                                            }
                                            else
                                            {
                                                <li class="paginate_button next disabled" id="dt_basic_next"><a href="#" aria-controls="dt_basic" data-dt-idx="8" tabindex="0">Next</a></li>

                                            }
                                        </ul>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- end widget content -->

            </div>
            <!-- end widget div -->

        </div>
        <!-- end widget -->

    </article>
    <!-- WIDGET END -->

</div>
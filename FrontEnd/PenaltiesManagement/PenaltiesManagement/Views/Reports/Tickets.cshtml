@model PenaltiesManagement.ViewModel.TicketsListViewModel
@{
    ViewData["Title"] = "Tickets List";
}

@section Scripts
    {
    <script src="@Url.Content("~/js/ticketspage.js")"></script>
}

<div class="row">

    <!-- NEW WIDGET START -->
    <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12 sortable-grid ui-sortable">

        <!-- Widget ID (each widget will need unique ID)-->
        <div class="jarviswidget jarviswidget-color-darken jarviswidget-sortable" id="wid-id-0" data-widget-editbutton="false" data-widget-colorbutton="false" role="widget">

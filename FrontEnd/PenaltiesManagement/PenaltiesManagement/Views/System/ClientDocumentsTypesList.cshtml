@model PenaltiesManagement.ViewModel.DocumentsViewModel
@{
    ViewData["Title"] = "סוגים של מסמכים שאפשר להוסיף";
}

<div class="row">

    <!-- NEW WIDGET START -->
    <article class="col-xs-12 col-sm-12 col-md-12 col-lg-12 sortable-grid ui-sortable">

        <!-- Widget ID (each widget will need unique ID)-->
        <div class="jarviswidget jarviswidget-color-darken jarviswidget-sortable" id="wid-id-0" data-widget-editbutton="false" data-widget-colorbutton="false" role="widget">
            <!-- widget options:
            usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

            data-widget-colorbutton="false"
            data-widget-editbutton="false"
            data-widget-togglebutton="false"
            data-widget-deletebutton="false"
            data-widget-fullscreenbutton="false"
            data-widget-custombutton="false"
            data-widget-collapsed="true"
            data-widget-sortable="false"

            -->
            <header role="heading">
                <div class="jarviswidget-ctrls" role="menu">   
                    <a href="/system/client/document/types/add" class="button-icon jarviswidget-toggle-btn" rel="tooltip" title="" data-placement="bottom" data-original-title="Create User">
                        <i class="fa fa-plus-square-o"></i>&nbsp;הוסף סוג של המסמך&nbsp;
                    </a>
                </div>
                <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                <h2>סוגים של מסמכים שאפשר להוסיף</h2>

                <span class="jarviswidget-loader"><i class="fa fa-refresh fa-spin"></i></span>
            </header>

            <!-- widget div-->
            <div role="content">

                <!-- widget edit box -->
                <div class="jarviswidget-editbox">
                    <!-- This area used as dropdown edit box -->

                </div>
                <!-- end widget edit box -->
                <!-- widget content -->
                <div class="widget-body no-padding">

                    <div id="dt_basic_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                        <table id="dt_basic" class="table table-striped table-bordered table-hover dataTable no-footer" width="100%" role="grid" aria-describedby="dt_basic_info" style="width: 100%;">
                            <thead>
                                <tr role="row">
                                    <th data-hide="expand" class="sorting" tabindex="0" aria-controls="dt_basic" rowspan="1" colspan="1" aria-label=" User ID: activate to sort column ascending" style="width: 160px;"><i class="fa fa-fw fa-hashtag text-muted hidden-md hidden-sm hidden-xs"></i> מס' </th>
                                    <th data-class="expand" class="expand sorting" tabindex="0" aria-controls="dt_basic" rowspan="1" colspan="1" aria-label=" First Name: activate to sort column ascending" style="width: 107px;"><i class="fa fa-fw fa-user text-muted hidden-md hidden-sm hidden-xs"></i> סוג</th>
                                    <th data-class="expand" class="expand sorting" tabindex="0" aria-controls="dt_basic" rowspan="1" colspan="1" aria-label=" Action: activate to sort column ascending" style="width: 107px;"><i class="fa fa-fw fa-check-square-o text-muted hidden-md hidden-sm hidden-xs" title="Action"></i></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var documenType in @Model.DocumentTypes)
                                {
                                    <tr role="row">
                                        <td>@documenType.DocumentTypeId</td>
                                        <td class=" expand"><span class="responsiveExpander"></span>@(documenType.DocumentTypeName)</td>
                                        <td>

                                            <a href="/system/client/document/types/update/@(documenType.DocumentTypeId)" class=""><span class="glyphicon glyphicon-pencil"></span></a>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="dt-toolbar-footer">
                            <div class="col-sm-6 col-xs-12 hidden-xs">
                                
                            </div>
                            <div class="col-xs-12 col-sm-6">
                                
                            </div>
                        </div>
                    </div>

                </div>
                <!-- end widget content -->

            </div>
            <!-- end widget div -->

        </div>
        <!-- end widget -->

    </article>
    <!-- WIDGET END -->

</div>